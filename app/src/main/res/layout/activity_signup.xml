<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background1"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#80FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/registerTitle"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/registerUserPhoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/baseline_account_circle_24"
                android:contentDescription="@string/registerUserPhotoDescription" />

            <EditText
                android:id="@+id/registerUsernameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/usernamePlaceholder"
                android:layout_margin="10dp"
                android:minHeight="48dp"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="8dp"/>


            <EditText
                android:id="@+id/registerEmailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/emailPlaceholder"
                android:layout_margin="10dp"
                android:minHeight="48dp"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:id="@+id/registerPasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/passwordPlaceholder"
                android:layout_margin="10dp"
                android:minHeight="48dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                />



            <CheckBox
                android:id="@+id/registerTermsCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agreeToTermsAndConditions"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/registerSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submitButton"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#3868c2" />

            <TextView
                android:id="@+id/alreadyHaveAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alreadyHaveAccount"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
